@page
@model LoginModel

@{
    ViewData["Title"] = "Actemium Login";
}

<div class="container d-flex align-items-center container-login" >
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-9 row login-card justify-content-center justify-content-lg-between" data-aos="fade-up" data-aos-offset="120" data-aos-duration="500" data-aos-once="false" data-aos-easing="ease-out-cubic" data-aos-delay="300">
                <div class="d-none d-lg-flex col-4 mr-3 pl-0">
                    <img src="/images/actemium-01.svg" style="width: auto; height:100%;" alt=""/>
                </div>
                <div class="col-12 col-md-10 col-lg-7 d-flex flex-column justify-content-center align-items-center">
                    <h3 class="text-center font-weight-bold c-blue mt-2 mt-lg-0">@ViewData["Title"]</h3>
                    <form id="account" method="post">
                        <div class="d-flex flex-column justify-content-center">
                            <div class="form-group">
                                <label asp-for="Input.UserName"></label>
                                <input asp-for="Input.UserName" class="form-control" aria-describedby="emailHelp" placeholder="Enter email address" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-check-label ml-2 small">
                                        <input asp-for="Input.RememberMe" class="form-check-input"/>
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="mb-2 d-flex justify-content-center form-group">
                                <button type="submit" class="btn btn-primary">Log in <i class="fas fa-arrow-right small ml-2"></i></button>
                            </div>
                            <div class="form-group">
                                <small class="text-center">
                                    Forgot
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </small>
                            </div>
                            <br>
                            <div asp-validation-summary="All" class="text-danger"></div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
